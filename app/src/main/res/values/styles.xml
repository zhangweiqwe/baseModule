<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="toolbarStyle">@style/AppWidget.AppCompat.Toolbar</item>
        <item name="android:actionBarSize">48dp</item>
    </style>


    <style name="AppWidget.AppCompat.Toolbar" parent="BaseWidget.AppCompat.Toolbar">
        <item name="android:background">?android:attr/statusBarColor</item>
    </style>

</resources>

<resources>

    <style name="AppTheme" parent="BaseAppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="android:windowBackground">@color/windowsBackground</item>
    </style>


    <style name="AppToolbarStyle" parent="BaseToolbarStyle">
        <item name="android:background">?android:attr/statusBarColor</item>
    </style>

</resources>

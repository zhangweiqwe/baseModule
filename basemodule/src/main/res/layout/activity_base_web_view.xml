<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".BaseWebViewActivity">




    <cn.wsgwz.basemodule.widgets.progress.ProgressConstraintLayout
            android:id="@+id/progress_layout"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_parent_cl"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <cn.wsgwz.basemodule.widgets.ScrollWebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></cn.wsgwz.basemodule.widgets.ScrollWebView>

        <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:progressDrawable="@drawable/progressbar_bg"
                android:max="100"/>
    </cn.wsgwz.basemodule.widgets.progress.ProgressConstraintLayout>

    <include
             app:layout_constraintTop_toTopOf="parent"
             layout="@layout/toolbar_layout"/>
    <FrameLayout
            android:id="@+id/video_container_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>